########################################
#Auth
########################################

# Used for signing JWT access/refresh tokens
JWT_SECRET_KEY=your-super-secret-jwt-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Optional: OAuth credentials (Google / LinkedIn)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
OAUTH_REDIRECT_URI=https://yourdomain.com/api/auth/callback

########################################
# DB
########################################

# For production (PostgreSQL)
DATABASE_URL=postgresql+psycopg://postgres:password@localhost:5432/brand_scaler

# For local development fallback
# DATABASE_URL=sqlite:///./app.db

########################################
# ☁️ REDIS / CACHE
########################################

REDIS_URL=redis://localhost:6379/0

########################################
# LLM
########################################

# OpenRouter (for text + reasoning models)
OPENROUTER_API_KEY=your-openrouter-key

# Optional: other model providers (e.g., Anthropic, OpenAI)
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

########################################
# Vid Gen
########################################

# ScottyLabs WAN2.2 endpoint
SCOTTYLABS_VIDEO_API=https://ops-5--example-wan2-generate-video-http.modal.run
SCOTTYLABS_API_KEY= # (if required — the demo endpoint doesn’t need it)

########################################
# optional storage
########################################

S3_BUCKET=brand-scaler-assets
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-aws-access-key-id
S3_SECRET_ACCESS_KEY=your-aws-secret-access-key

########################################
# env setting
########################################

ENV=development     # or 'production'
PORT=8000
LOG_LEVEL=info
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000